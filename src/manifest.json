{
  "name": "Bequem-Recorder",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "A chrome extension to record your actions into chrome auto action script.",
  "permissions": [
    "storage",
    "webNavigation",
    "tabs",
    "*://*/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; https://*.segment.com https://*.mxpnl.com; object-src 'self'",
  "browser_action": {
    "default_icon": "images/icon-black.png",
    "default_title": "Bequem-Recorder"
  },
  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  }
}
